<link rel="stylesheet" href="/css/checkout.css">

<h1>Checkout</h1>

<% if (cart && cart.length > 0) { %>
  <table class="checkout-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% cart.forEach(item => { %>
        <tr>
          <td>
            <img src="<%= item.product.image %>" alt="<%= item.product.name %>" class="checkout-product-image">
            <span><%= item.product.name %></span>
          </td>
          <td>RS.<%= item.product.price %></td>
          <td><%= item.quantity %></td>
          <td>RS.<%= item.product.price * item.quantity %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="checkout-summary">
    <p><strong>Total Price: RS.<%= totalPrice %></strong></p>
    <button class="checkout-btn">Complete Purchase</button>
  </div>
<% } else { %>
  <p>Your cart is empty. Please add products to your cart before proceeding.</p>
<% } %>
