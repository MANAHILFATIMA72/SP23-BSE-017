<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/Sign-up-form.css">
    <link rel="stylesheet" href="/css/login-form.css">
    <link rel="stylesheet" href="/css/search.css">
    <link rel="stylesheet" href="/css/about.css">
</head>
<body>
    <%- include('../partials/header') %>
    <% if (messages.success) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i> <!-- Success Icon -->
          <span><%= messages.success %></span>
          <a href="#" class="close" onclick="this.parentElement.style.display='none';">&times;</a>
        </div>
      <% } %>
      <% if (messages.error) { %>
        <div class="alert alert-danger">
          <i class="fas fa-times-circle"></i> <!-- Error Icon -->
          <span><%= messages.error %></span>
          <a href="#" class="close" onclick="this.parentElement.style.display='none';">&times;</a>
        </div>
      <% } %>
      <% if (messages.info) { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i> <!-- Info Icon -->
          <span><%= messages.info %></span>
          <a href="#" class="close" onclick="this.parentElement.style.display='none';">&times;</a>
        </div>
      <% } %>
      <% if (messages.warning) { %>
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-circle"></i> <!-- Warning Icon -->
          <span><%= messages.warning %></span>
          <a href="#" class="close" onclick="this.parentElement.style.display='none';">&times;</a>
        </div>
      <% } %>
      
      
    <%- body %>

    <%- include('../partials/footer') %>
</body>
</html>
